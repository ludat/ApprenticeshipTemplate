<% if session[:user] %>
    <h1> user: <%= session[:user]['username'] %> </h1>
<% end %>

<%= form_tag do %>
    <p> <%= text_field :username, '', placeholder: 'username', required: true %> </p>
    <p> <%= password_field :password, '', placeholder: 'password', required: true %> </p>
    <p> <%= submit_tag('Login') %> </p>
<% end %>
